<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clear"
    android:orientation="vertical"
    android:padding="21dp"
    tools:context=".ui.HistoryActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/order_all"
        android:elevation="6dp"
        app:cardCornerRadius="20sp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_by_day"
                android:text="@string/order_by_day"
                android:fontFamily="@font/avenirblack"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/order_data"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="6dp"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_for_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirblack"
                android:text="@string/search_after_date"
                android:textAlignment="center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/order_soup"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="6dp"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_for_soup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirblack"
                android:text="@string/search_after_soup"
                android:textAlignment="center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/order_main"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="6dp"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_for_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirblack"
                android:text="@string/search_after_main"
                android:textAlignment="center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/order_side"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="6dp"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_for_side"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirblack"
                android:text="@string/search_after_side"
                android:textAlignment="center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>